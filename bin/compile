#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Installing libpqxx"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="https://s3.amazonaws.com/denisnazarov/libpqxx-4.0.1-heroku.tar.gz"
BUNDLE_CONFIG=".bundle/config"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar xz

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/libpqxx.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export CPLUS_INCLUDE_PATH="$CPLUS_INCLUDE_PATH:/app/vendor/libpqxx/include"' >> $PROFILE_PATH
echo 'export LIBRARY_PATH="$LIBRARY_PATH:/app/vendor/libpqxx/lib"' >> $PROFILE_PATH
echo '\'BUNDLE_BUILD__HMSEARCH-POSTGRES: "--with-pqxx-include=/app/vendor/libpqxx/include --with-pqxx-lib=/app/vendor/libpqxx/lib" >> .bundle/config\'' >> $PROFILE_PATH
